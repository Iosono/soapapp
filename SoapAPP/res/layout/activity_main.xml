<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/fl_magazzino"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/btn_startStoreActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="startMagazzino"
            android:text="@string/magazzino"
            android:textSize="20px" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_ricette"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/fl_magazzino" >

        <Button
            android:id="@+id/btn_startRicetteActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="startRicette"
            android:text="@string/ricette"
            android:textSize="20px" />
    </FrameLayout>

</RelativeLayout>