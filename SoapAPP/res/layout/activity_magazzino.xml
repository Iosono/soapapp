<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MagazzinoActivity" >

    <Button
        android:id="@+id/btn_visualizzaIng"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/btn_aggiungiIng"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/btn_aggiungiIng"
        android:text="@string/visualizzaIng"
        android:textSize="20px"
        android:onClick="startVisualizzaIngredienti" />

    <Button
        android:id="@+id/btn_aggiungiIng"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="109dp"
        android:onClick="startAggiungiIngrediente"
        android:text="@string/aggiungiIng"
        android:textSize="20px" />
    
</RelativeLayout>